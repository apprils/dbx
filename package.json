{
  "version": "0.2.6",
  "name": "@appril/dbx",
  "description": "Tiny wrapper around KnexJS",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": "20.10",
    "npm": "10.2"
  },
  "files": [
    "pkg/*"
  ],
  "bin": {
    "appril-dbx": "pkg/cli/cli.sh"
  },
  "// ✨ seems exports.types not fully supported by all editors yet?": "",
  "types": "./pkg/api/index.d.ts",
  "typesVersions": {
    "*": {
      "cli": [
        "./pkg/cli/index.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "require": "./pkg/api/index.js",
      "types": "./pkg/api/index.d.ts"
    },
    "./cli": {
      "require": "./pkg/cli/index.js",
      "types": "./pkg/cli/index.d.ts"
    }
  },
  "scripts": {
    "esbundler": "func() { e=$1; shift; esbuild $e --bundle --platform=node --target=node20 --packages=external --loader:.tpl=text $*; }; func",
    "// ✨ build cli index": "",
    "build:cli:index": "npm run esbundler -- lib/cli/index.ts --sourcemap=inline --outdir=pkg/cli",
    "postbuild:cli:index": "tsc -p lib/cli/tsconfig.json",
    "// ✨ build cli migrations": "",
    "build:cli:migrations": "npm run esbundler -- lib/cli/migrations/index.ts --sourcemap=inline --outfile=pkg/cli/migrations.js",
    "// ✨ build cli generators": "",
    "build:cli:generators": "npm run esbundler -- lib/cli/generators/index.ts --sourcemap=inline --outfile=pkg/cli/generators.js",
    "// ✨ build cli bin": "",
    "build:cli:bin": "cp lib/cli/cli.sh pkg/cli",
    "postbuild:cli:bin": "cp lib/cli/bash_completion.sh pkg/cli",
    "// ✨ build cli": "",
    "build:cli": "set -e; for e in index generators migrations bin; do npm run build:cli:$e; done",
    "// ✨ build api": "",
    "build:api": "npm run esbundler -- lib/api/index.ts --sourcemap=inline --outdir=pkg/api",
    "postbuild:api": "tsc -p lib/api/tsconfig.json",
    "// ✨ build": "",
    "prebuild": "mkdir -p pkg/cli; find pkg -type f -exec rm -fv {} \\;",
    "build": "set -e; for e in api cli; do npm run build:$e; done"
  },
  "prettier": "@appril/prettier-config",
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ],
      "after:release": [
        "mkdir -p var/pub",
        "npm pack --pack-destination var/pub"
      ]
    }
  },
  "dependencies": {
    "@appril/pgts": "^0.2.6",
    "date-fns": "^3.3.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "nopt": "^7.2.0",
    "pg": "^8.11.3",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@appril/prettier-config": "^0.2.2",
    "@appril/tsconfig": "^0.2.3",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.14.202",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.11.10",
    "@types/nopt": "^3.0.32",
    "@types/pg": "^8.11.0",
    "@types/prompts": "^2.4.9",
    "esbuild": "^0.20.0",
    "prettier": "^3.2.4",
    "release-it": "^17.0.3"
  },
  "peerDependencies": {
    "knex": "^3.1.0"
  }
}
