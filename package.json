{
  "version": "0.2.10",
  "name": "@appril/dbx",
  "description": "Tiny wrapper around KnexJS",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": ">=20.10",
    "npm": ">=10.2"
  },
  "files": [
    "pkg/*"
  ],
  "bin": {
    "appril-dbx": "pkg/cli.sh"
  },
  "exports": {
    ".": {
      "require": "./pkg/api/index.js",
      "types": "./pkg/api/index.d.ts"
    },
    "./cli": {
      "require": "./pkg/cli/index.js",
      "types": "./pkg/cli/index.d.ts"
    }
  },
  "scripts": {
    "// ✨ linters": "",
    "lint": "biome lint ./lib",
    "// ✨ types": "",
    "tsc": "tsc --emitDeclarationOnly",
    "// ✨ builders": "",
    "esbuilder": "set -e; func() { e=$1; shift; esbuild lib/$e.ts --outfile=pkg/$e.js --bundle --platform=node --target=node20 --packages=external --loader:.tpl=text --sourcemap=inline $*; }; func",
    "// ✨ build api": "",
    "build:api": "npm run esbuilder api/index",
    "// ✨ build cli": "",
    "build:cli": "for e in cli/index cli/generators/index cli/migrations/index; do npm run esbuilder $e; done",
    "postbuild:cli": "for e in cli.sh bash_completion.sh; do cp lib/cli/$e pkg; done",
    "// ✨ build": "",
    "prebuild": "mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "set -e; npm run lint; npm run tsc; for e in api cli; do npm run build:$e; done"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    }
  },
  "dependencies": {
    "@appril/pgts": "^0.2.9",
    "date-fns": "^3.3.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "nopt": "^7.2.0",
    "pg": "^8.11.3",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@appril/tsconfig": "^0.2.5",
    "@biomejs/biome": "^1.5.3",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.14.202",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.11.25",
    "@types/nopt": "^3.0.32",
    "@types/pg": "^8.11.2",
    "@types/prompts": "^2.4.9",
    "esbuild": "^0.20.1",
    "release-it": "^17.1.1"
  },
  "peerDependencies": {
    "knex": "^3.1.0"
  }
}
